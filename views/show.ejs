<!DOCTYPE html>
<html>
<head>
  <title><%= friend.name %></title>
</head>
<body>
  <h1><%= friend.name %></h1>

  <h2>Hobbies</h2>
  <ul>
    <% friend.hobbies.forEach(hobby => { %>
      <li><%= hobby %></li>
    <% }) %>
  </ul>

  <h2>Places of Interest</h2>
  <ul>
    <% friend.placesOfInterest.forEach(place => { %>
      <li><%= place %></li>
    <% }) %>
  </ul>

  <h2>Edit Friend</h2>
  <form action="/friends/<%= friend._id %>?_method=PUT" method="POST">
    <input type="text" name="friend[name]" value="<%= friend.name %>" required>
    <input type="text" name="friend[hobbies]" value="<%= friend.hobbies.join(', ') %>" required>
    <input type="text" name="friend[placesOfInterest]" value="<%= friend.placesOfInterest.join(', ') %>" required>
    <button type="submit">Save Changes</button>
  </form>

  <h2>Delete Friend</h2>
  <form action="/friends/<%= friend._id %>?_method=DELETE" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" onclick="return confirm('Are you sure you want to delete this friend?')">Delete</button>
  </form>
</body>
</html>
